<%- include('partials/header'); %> 
<% if (locals.errors && locals.errors.login) { %>
	<% locals.errors.login.forEach(function(error) { %>
		<p class="alert alert-primary" role="alert"><%= error %></p>
	<% }) %>
<% } %>
<form class="my-4 container" form action="/login" method="post">
		<div class="form-group">
	  <label for="exampleInputEmail1">Email address</label>
	  <input type="email" class="form-control" name="email" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Email">
	  <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
	</div>
	<div class="form-group">
	  <label for="exampleInputPassword1">Password</label>
	  <input type="password" name="password" placeholder="Password" class="form-control" id="exampleInputPassword1">
	</div>
	<div class="form-group form-check d-flex align-items-center">
	  <input type="checkbox" class="form-check-input mt-0" id="exampleCheck1">
	  <label class="form-check-label" for="exampleCheck1">Remember password</label>
	</div>
	<div>
		<label id="register" class="text">Don't have an account? Sign up<a href="/register"><i class="text"></i>here.</a></label> 
	</div>
	<button type="submit" class="btn btn-primary">Login</button>
  </form>

<%- include('partials/footer'); %>